<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="car" class="com.pain.Car"
        init-method="car_init"
        destroy-method="car_destroy"
        p:brand="J20"
        p:maxSpeed="200" />

    <bean id="myBeanPostProcessor" class="com.pain.MyBeanPostProcessor" />
    <bean id="myBeanFactoryPostProcessor" class="com.pain.MyBeanFactoryPostProcessor" />

</beans>